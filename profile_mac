export CFLAGS="-O2 -arch x86_64"
export LDFLAGS="-L/opt/local/lib"
export CPPFLAGS="-I/opt/local/include"

# LDFLAGS:  -L/usr/local/opt/gettext/lib
# CPPFLAGS: -I/usr/local/opt/gettext/include

